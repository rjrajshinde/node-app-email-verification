<head>
    <title>Sufee Admin - HTML5 Admin Template</title>
    <%include ../partials/head.ejs%>
</head>

<body>
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="/images/logo.png" alt="">
                    </a>
                </div>
                <div class="login-form">
                    <%if(errorMessage){%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%-errorMessage%>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                        </div>
                        <%}%>
                            <form method="POST" action="/auth/forgetPassword">
                                <div class="form-group">
                                    <label>Email address</label>
                                    <input type="email" class="form-control" name="email" placeholder="Email"
                                        value="<%-email%>">
                                </div>
                              

                                <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Forget Password</button>
                                <!-- <div class="register-link m-t-15 text-center">
                                    <p>Already have account ? <a href="/auth/login"> Sign Up Here</a></p>
                                </div> -->
                            </form>
                </div>
            </div>
        </div>
    </div>

    <%include ../partials/bodyScripts.ejs%>

</body>

</html>